import pandas as pd

def get_outliers_bounds(df, columns, iqr_multiplier=1.5):
    bounds_list = []
    for column in columns:
        # calculate the IQR of the column
        q1 = df[column].quantile(0.25)
        q3 = df[column].quantile(0.75)
        iqr = q3 - q1

        # calculate the upper and lower bounds for outliers
        upper_bound = q3 + iqr_multiplier*iqr
        lower_bound = q1 - iqr_multiplier*iqr

        bounds_dict = {'column': column, 'lower_bound': lower_bound, 'upper_bound': upper_bound}
        bounds_list.append(bounds_dict)
    
    return bounds_list
    
    
columns = ['Income', 'Age', 'Children']
outliers_bounds = get_outliers_bounds(crm, columns)
print(outliers_bounds)
